<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color" >

    <TextView
        android:id="@+id/personal_info"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/blue_color"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white_color"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_centerVertical="true"
        android:background="@android:color/white"
        android:orientation="horizontal">
    </LinearLayout>

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/login_account"
        android:layout_marginLeft="50dp"
        android:gravity="center"
        android:text="账号：" />

    <EditText
        android:id="@+id/login_account"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/line1"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:background="@null"
        android:hint="请输入帐号"
        android:textColorHint="#ffff00" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/login_password"
        android:layout_marginLeft="50dp"
        android:gravity="center"
        android:text="密码:" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/line1"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:background="@null"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:textColorHint="#ffff00" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/login_password"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@mipmap/bg_title"
        android:text="登录" />

    <Button
        android:id="@+id/add_admin_user"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/bg_title"
        android:text="添加管理员"
        android:visibility="gone" />
</RelativeLayout>