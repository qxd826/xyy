<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/grey_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/blue_color">

        <ImageButton
            android:id="@+id/goods_detail_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@color/alpha_00"
            android:padding="10dp"
            android:src="@mipmap/back_btn" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/alpha_00"
            android:gravity="center"
            android:text="商品详情"
            android:textColor="@color/white_color"
            android:textSize="18sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/grey_color"
        android:gravity="center_vertical"
        android:textColor="@color/white_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="名称"
            android:textColor="@color/black_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/goods_detail_name_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:textColor="@color/black_color"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@color/grey_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="数量"
            android:textColor="@color/black_color"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/goods_detail_number_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:textColor="@color/black_color"
            android:textSize="14sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@color/grey_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="编号"
            android:textColor="@color/black_color"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/goods_detail_code_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:textColor="@color/black_color"
            android:textSize="14sp"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/grey_color"
        android:gravity="center_vertical"
        android:text="商品入库"
        android:textColor="@color/white_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white_color">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text="入库数量"
            android:textColor="@color/black_color"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/goods_in_edit"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:textColor="@color/black_color"
            android:textSize="14sp"
            android:background="@null"
            android:inputType="number"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@color/grey_color" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white_color">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text="供应商"
            android:textColor="@color/black_color"
            android:textSize="14sp" />
        <Spinner
            android:id="@+id/in_goods_supply_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="120dp"
            android:gravity="right|center_vertical"
            android:layout_alignParentRight="true"
            android:background="@color/white_color"
            android:spinnerMode="dialog"
    />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/grey_color"
        android:gravity="center_vertical"
        android:text="商品出库"
        android:textColor="@color/white_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white_color">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text="出库数量"
            android:textColor="@color/black_color"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/goods_out_edit"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:textColor="@color/black_color"
            android:textSize="14sp"
            android:background="@null"
            android:inputType="number"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@color/grey_color" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white_color">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text="客户"
            android:textColor="@color/black_color"
            android:textSize="14sp" />
        <Spinner
            android:id="@+id/out_goods_customer_spinner"
            android:layout_width="match_parent"
            android:layout_marginLeft="120dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:spinnerMode="dialog"
            android:background="@color/white_color"
           />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/grey_color"
        android:gravity="center_vertical"
        android:textColor="@color/white_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/in_goods_btn"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@mipmap/bg_title"
            android:text="入库"
            android:layout_weight="1"
            android:textColor="@color/white_color"
            android:textSize="14sp" />
        <Button
            android:id="@+id/out_goods_btn"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@mipmap/bg_title"
            android:text="出库"
            android:layout_weight="1"
            android:textColor="@color/white_color"
            android:textSize="14sp" />
        <Button
            android:id="@+id/in_out_detail_btn"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@mipmap/bg_title"
            android:text="出入库详情"
            android:layout_weight="1"
            android:textColor="@color/white_color"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>