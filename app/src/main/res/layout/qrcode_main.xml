<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe1e0de">

    <Button
        android:id="@+id/span_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:text="扫描商品" />

    <TextView
        android:id="@+id/goods_code_result"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/span_button"
        android:gravity="center_horizontal"
        android:lines="2"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/qrcode_bitmap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/goods_code_result" />

    <View
        android:id="@+id/view_1"
        android:layout_below="@+id/qrcode_bitmap"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:visibility="gone"
        android:background="@color/grey_color"
        android:gravity="center_vertical"
        android:textColor="@color/white_color" />

    <LinearLayout
        android:id="@+id/below_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view_1"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/grey_color" />

        <RelativeLayout
            android:id="@+id/goods_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white_color"
            android:visibility="gone">

            <TextView
                android:id="@+id/add_goods_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="编号"
                android:textColor="@color/black_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/add_goods_code_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/add_goods_code"
                android:background="@null"
                android:ellipsize="end" />

            <EditText
                android:id="@+id/add_goods_code_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/add_goods_code"
                android:background="@null"
                android:ellipsize="end" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/grey_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white_color">

            <TextView
                android:id="@+id/add_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="名称"
                android:textColor="@color/black_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/add_goods_name_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/add_goods_name"
                android:background="@null"
                android:ellipsize="end" />

            <EditText
                android:id="@+id/add_goods_name_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/add_goods_name"
                android:background="@null"
                android:ellipsize="end" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/grey_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white_color">

            <TextView
                android:id="@+id/add_goods_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="数量"
                android:textColor="@color/black_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/add_goods_num_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/add_goods_num"
                android:background="@null"
                android:ellipsize="end" />

            <EditText
                android:id="@+id/add_goods_num_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/add_goods_num"
                android:background="@null"
                android:ellipsize="end"
                android:inputType="number"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/grey_color"
            android:gravity="center_vertical"
            android:textColor="@color/white_color" />

        <LinearLayout
            android:id="@+id/add_goods_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/add_goods_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@color/blue_color"
                android:text="添加" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/edit_goods_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone">

            <Button
                android:id="@+id/edit_goods_btn"
                android:layout_marginLeft="20dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/view_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blue_color"
                android:text="编辑" />

            <View
                android:id="@+id/view_2"
                android:layout_centerHorizontal="true"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="@color/alpha_00" />

            <Button
                android:id="@+id/edit_goods_save_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/view_2"
                android:layout_marginRight="20dp"
                android:background="@color/blue_color"
                android:text="保存" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>