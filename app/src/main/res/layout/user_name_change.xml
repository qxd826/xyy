<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/blue_color">

        <ImageButton
            android:id="@+id/user_name_change_back_btn"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:background="@color/alpha_00"
            android:src="@mipmap/back_btn" />

        <TextView
            android:id="@+id/personal_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/alpha_00"
            android:gravity="center"
            android:text="姓名"
            android:textColor="@color/white_color"
            android:textSize="18sp" />

        <Button
            android:id="@+id/user_name_save_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:background="@color/alpha_00"
            android:text="保存"
            android:textColor="@color/white_color"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/grey_color"
        android:gravity="center_vertical"
        android:textColor="@color/white_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white_color">

        <TextView
            android:id="@+id/user_name_change_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="姓名"
            android:textColor="@color/black_color"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/user_name_change_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/user_name_change_text"
            android:layout_marginLeft="20dp"
            android:background="@null"/>
    </RelativeLayout>
</LinearLayout>